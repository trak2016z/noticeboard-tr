@model Repo.Models.Advertisement

@{
    ViewBag.Title = "Edytuj ogłoszenie";
    ViewBag.Description = "Edytujesz ogłosznie: " + Model.Title;
}

<h2>@ViewBag.Description</h2>
@if(ViewBag.Error == true)
{
    <div class="alert alert-danger" role="alert">
        Wystąpił błąd podczas zapisywania zmian
        Odśwież stronę i spróbuj ponownie !
    </div>
}
else if (ViewBag.Error == false)
{
    <div class="alert alert-success" role="alert">
        Pomyślnie zapisano zmiany !
    </div>
}


